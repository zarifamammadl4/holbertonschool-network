#!/usr/bin/env bash
# This script configures host resolution for localhost and facebook.com

# Overwrite /etc/hosts with required mappings
sudo sed -i s/^127.0.0.1s+localhost/127.0.0.2 localhost/ /etc/hosts

# Add facebook.com mapping (avoid duplicates)
sudo sed -i /facebook.com/d /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
